#include<iostream>
using namespace std;
int main(){
    int t;
    cin>>t;
    while(t--){
        int n,x;
        cin>>n>>x;
        int arr[n-1];
        for(int i=0;i<n-1;i++){
            cin>>arr[i];
        }
        int A=0;
        for(int i=0;i<n-1;i++){
            A+=arr[i];
        }
        int B=x*n;
        int y=B-A;
        if(y<0){
            cout<<0<<endl;
        }
        else{
            cout<<y<<endl;
        }
    }
}
