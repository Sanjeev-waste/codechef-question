#include<iostream>
using namespace std;
int main(){
    int t;
    cin>>t;
    while(t--){
        int x,y;
        cin>>x>>y;
        int A=(500-(x*2));
        int B=(1000-(x+y)*4);
        int C=A+B;
        int D=(1000-(y*4));
        int E=(500-(x+y)*2);
        int F=D+E;
        cout<<max(C,F)<<endl;
    }
}
